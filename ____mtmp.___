##########################
### SELECTED INTERFACE ###
##########################

# OpenGL Init
ifeq (,$(strip $(__INT_OPENGLLDFLAGS)))
	__XX_FGLC = -D__REMOOD_OPENGL_SUPPORTED 
	__XX_FGLD = $(__XX_SYSOPENGL)
else
	__XX_FGLC = $(__INT_OPENGLCFLAGS)
	__XX_FGLD = $(__INT_OPENGLLDFLAGS)
endif

# SDL Interface
ifeq (sdl,$(strip $(__XX_DEFINTRF)))
	# Basic Settings
	__XX_IFACEDIR = sdl
	__XX_FPREFIX = s
	__XX_FCFLAGS = -D__REMOOD_OPENGL_SUPPORTED -D__REMOOD_INTERFACE_SDL $(__INT_SDLCFLAGS) $(__XX_FGLC)
	__XX_FLDFLAGS = $(__INT_SDLLDFLAGS) $(__XX_FGLD)
else

# Allegro Interface
ifeq (allegro,$(strip $(__XX_DEFINTRF)))
	__XX_FGLC :=
	__XX_FGLD :=
	
	__XX_IFACEDIR = allegro
	__XX_FPREFIX = a
	__XX_FCFLAGS = -D__REMOOD_INTERFACE_ALLEGRO $(__INT_ALLEGROCFLAGS) $(__XX_FGLC)
	__XX_FLDFLAGS = $(__INT_ALLEGROLDFLAGS) $(__XX_FGLD)
else

# Raw Windows Interface
ifeq (win36c,$(strip $(__XX_DEFINTRF)))
	__XX_FGLC :=
	__XX_FGLD :=
	
	__XX_IFACEDIR = win36c
	__XX_FPREFIX = w
	__XX_FCFLAGS = -D__REMOOD_INTERFACE_WIN36C $(__XX_FGLC)
	__XX_FLDFLAGS = $(__XX_FGLD)
else

# Headless interface
ifeq (headless,$(strip $(__XX_DEFINTRF)))
	__XX_FGLC :=
	__XX_FGLD :=
	
	__XX_IFACEDIR = headless
	__XX_FPREFIX = h
	__XX_FCFLAGS = -D__REMOOD_INTERFACE_HEADLESS $(__XX_FGLC)
	__XX_FLDFLAGS = $(__XX_FGLD)
else

# PalmOS interface
ifeq (palmos,$(strip $(__XX_DEFINTRF)))
	__XX_FGLC :=
	__XX_FGLD :=
	
	__XX_IFACEDIR = palmos
	__XX_FPREFIX = p
	__XX_FCFLAGS = -D__REMOOD_INTERFACE_PALMOS $(__XX_FGLC)
	__XX_FLDFLAGS = $(__XX_FGLD)
else

# OpenGL+GLUT+OpenAL interface
ifeq (glutal,$(strip $(__XX_DEFINTRF)))
	__XX_IFACEDIR = glutal
	__XX_FPREFIX = g
	__XX_FCFLAGS = -D__REMOOD_OPENGL_SUPPORTED -D__REMOOD_INTERFACE_GLUTAL $(__XX_FGLC) $(__INT_GLUTCFLAGS) $(__INT_OPENALCFLAGS)
	__XX_FLDFLAGS = $(__XX_FGLD) $(__INT_GLUTLDFLAGS) $(__INT_OPENALLDFLAGS)

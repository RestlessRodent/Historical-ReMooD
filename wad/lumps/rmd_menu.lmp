
// Hello World!
Menu "hello"
{
	Title "MENUGENERAL_HELLOWORLD";
}

// Main Menu
Menu "mainmenu"
{
	TitlePic "M_DOOM";
	Title "MENUGENERAL_MAINMENU";
	
	Item "sologame"
	{
		Text "MENUGENERAL_SOLOGAME";
		
		SelectFunc "SubMenu";
		SelectVal "solomain";
	}
	
	Item "quitgame"
	{
		Text "MENUGENERAL_QUIT";
		
		SelectFunc "Console";
		SelectVal "m_quitprompt";
	}
}

// Single Player Menu
Menu "solomain"
{
	Title "MENUGENERAL_SOLOGAME";
	
	Item "sologame"
	{
		Text "MENUGENERAL_CLASSICSTART";
		
		SelectFunc "Console";
		SelectVal "m_startclassic #";
	}
}

